{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "$icons/*": ["src/icons/*"],
      "$idl/*": ["src/idl/*"],
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"],
      "$src/*": ["src/*"],
      "$stores/*": ["src/stores/*"],
      "$utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.ts", "src/**/*.svelte"]
}
