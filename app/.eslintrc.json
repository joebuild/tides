{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "indent": [2, "tab"],
    "no-tabs": 0
  }
}
